<% ginfo = JSON.parse(seqid_list) %>


<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/header_html'); %>
<title><%= title %></title>
<link rel="stylesheet" href="/css/genome_pages.css" >
<style>

</style>
<body>
  <div id='wrapper'>		
	    
	    
	<div id='header'>
       <%- include('../../partials/header_img'); %>
    </div>
	
	<div id="navbar">
		<%- include('../../partials/navbar'); %>
	</div>
	
	<div  class='page-content'>
	
	
	<div class='wide-content' id="">  					
		<div class='page-title'>Human Microbial Genomes</div>


 <%- include('../../partials/genome_table_filter.ejs') %> 

<div id='table_div'>
<br><span id='count_info'><%- count_text %></span>
<table id='gnom-table' class='table sortable' border='1'><thead>
<tr>
<th class='col1'>Taxon ID</th>
<th class='col130'>Genus</th>
<th class='col130'>Species</th>
<th class='col4'>Strain/Culture<br>Collection</th>
<th class='col50'>SEQ ID</th>
<th class='col50'>No. of contigs<br>and<br>plasmids</th>
<th class='col50'>Combined<br>Length (bp)</th>
<th class='col50'>GC<br>(%)</th>
<th class=" col9 sorttable_nosort" colspan='4'>Genome Info and Tools</th>
<th class=" col10 sorttable_nosort" colspan='3'>Available Annotations</th>
</tr>
</thead>
<tbody>

<% for(n in ginfo){ %>
	<% taxidfullname = 'HMT-'+("000" + ginfo[n].otid).slice(-3); %>
	<tr>
		<td nowrap ><a href='tax_description?otid=<%= ginfo[n].otid %>'><%= taxidfullname %></a></td>
		<td class='tax_name'><%= ginfo[n].genus %></td>
		<td class='tax_name'><%= ginfo[n].species %></td>
		<td class=''><%= ginfo[n].ccolct %></td>
		<td class='center'><a href="genome_description?gid=<%= ginfo[n].gid %>"> <%= ginfo[n].gid %></a></td>
		<td class='center'><%= ginfo[n].ncontigs %></td>
		<td class='center'><%= ginfo[n].tlength %></td>
		<td class='center'><%= ginfo[n].gc %></td>
        <td class='gbutton red_btn' nowrap><a href='/taxa/tax_description?otid=<%= ginfo[n].otid %>'>Taxon Desc</a></td>
        <td class='gbutton green_btn' nowrap><a href='genome_description?gid=<%= ginfo[n].gid %>'>Genome Info</a></td>
        <td class='gbutton blue_btn' nowrap><a href=''>Genome Viewer</a></td>
        <td class='gbutton purple_btn'><a href=''>BLAST</a></td>
        <td class='gbutton'>PROKKA</td>
        <td class='gbutton'>NCBI</td>
        <td class='gbutton'>HOMD</td>
	</tr>
<% } %>

</tbody>
</table>
  </div>  <!-- end table_div -->
		</div>  <!-- end wide -->
	
    </div> <!-- end: page-content -->
    
    <div id='footer'>
         <%- include('../../partials/footer'); %>
    </div>
       
   
  </div> <!-- end wrapper -->
</body>

</html>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script type="text/javascript" src="/js/menu.js"></script>
<script type="text/javascript" src="/js/genomes.js"></script>

<script src="/js/sorttable.js"></script> <!-- https://www.kryogenix.org/code/browser/sorttable -->
<script>
	var letter = '<%- letter %>'
	if(letter){
		document.getElementById(letter).style.color = 'red'
		document.getElementById(letter).style.fontSize = 'medium'
	}else{
		document.getElementById('all').style.color = 'red'
	}
</script>

