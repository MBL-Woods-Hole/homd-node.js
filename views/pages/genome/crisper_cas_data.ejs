<style>
#crisper-table-div{
   padding:20px;
}
th, td {
  border: 1px solid black;
  padding:3px 3px;
}
</style>

<% var cdata = JSON.parse(crisper_data) %>
<% var cfg = JSON.parse(config) %> 
<%- include('../../partials/header_html'); %>

<body>
    <div id='wrapper'>
    <%- include('../../partials/header_img'); %>
    <%- include('../../partials/navbar'); %>
    
    
    <div class='page-content' >
              
       <div class='title'>CRISPR-Cas for Genome <%= gid %></div>
       
       <div id='crisper-table-div'>
       <button class='pill pill-slateblue' onclick="history.back()">back to SEQ-ID/CRISPER List</button>
       <table id='crisper-table' class='table'>
       <tr>
       <th>Contig</th>
       <th>Operon<br><small>(link to GenomeViewer)</small></th>
       <th>Operon Position</th>
       <th>Prediction</th>
       <th>CRISPERs</th>
       <th>Distances</th>
       <th>Prediction-Cas</th>
       <th>Prediction-CRISPERS</th>
       </tr>
       <% for(i in cdata){ %>
       <% op = cdata[i] %>
       <tr>
         <td><%= op.contig %></td>
         <% loc = op.contig+":"+(parseInt(op.op_pos1)-500).toString()+".."+(parseInt(op.op_pos2)+500).toString() %>
         <% highlight = op.contig+":"+op.op_pos1+".."+op.op_pos2 %>
         <td><a href="<%= cfg.JBROWSE_URL %>/<%= gid %>&loc=<%= loc %>&highlight=<%= highlight %>&tracks=crispr" target='_blank' rel="noopener noreferrer"><%= op.operon %></a></td>
         
         <td><%= op.op_pos1 %>, <%= op.op_pos2 %></td>
         <td><%= op.prediction %></td>
         <td>
         <% for(i in op.crispers){ %>
           <%= op.crispers[i] %><br>
         <% } %>
         </td>
         <td>
         <% for(i in op.distances){ %>
           <%= op.distances[i] %><br>
         <% } %>
         </td>
         <td><%= op.prediction_cas %></td>
         <td>
         <% for(i in op.prediction_crispers){ %>
           <%= op.prediction_crispers[i] %><br>
         <% } %>
         </td>
       </tr>
       <% } %>
       </table>
       
       </div>
    
  
    </div> <!-- end: page-content -->
    
    <div id='footer'>
         <%- include('../../partials/footer'); %>
    </div>
       
</body>

</html>

<script type="text/javascript" src="/js/jquery-2.1.1.min.js"></script> 
<script type="text/javascript" src="/js/menu.js"></script>
<script>
  mainmenu()
</script>


