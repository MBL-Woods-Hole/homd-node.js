  .form-inline {
    display: inline;

  }



  #gnomdesc-table-chars {
    width: 100%;
    /* padding-right:10px; */
    border: 1px solid black;
    background: lightgrey;
    border-collapse: collapse;
  }

  #gnomdesc-table-chars td {
    padding: 5px 8px;
    border: 1px solid darkgreen;
    width: 50%;

  }

  #gnomdesc-table-chars th {
    padding: 15px;
