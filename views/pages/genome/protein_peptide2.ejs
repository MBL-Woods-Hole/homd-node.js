<%- include('../../partials/header_html'); %>

<% list = JSON.parse(data) %>
<% var cfg = JSON.parse(config) %> 

<body>
    
    <div id='wrapper'>
    <%- include('../../partials/header_img'); %>
    <%- include('../../partials/navbar'); %>
    
    
    <div class='page-content' >
    <div class='title'>Genomes with proteins/peptides detected in human salivary proteome</div>
  
 
     
<div id='peptide-box' >
     <small>row count: <%= row_count %></small> <small style='float:right;'>* HSP: Human Salivary Proteome <a href='https://salivaryproteome.org' target='_blank'>https://salivaryproteome.org/</a></small>
     <table id='peptide-table' class='table table-hover table-condensed sortable' style='background: lightgrey;'>
     <thead>
      <tr>
        <th class="col1" title='GenomeID' nowrap>HOMD<br>Sequence ID</th>
        <th class="col1" title='GenomeID' nowrap>Link to<br>Peptides Table</th>
        <th class="col2" nowrap>Taxon-ID</th>
        <th scope="colx" nowrap>Organism</th>
        <th nowrap>Studies</th>
        <th nowrap>Number of Proteins<br>Detected in HSP*</th> 
        <th nowrap>Number of Peptides<br>Detected in HSP*</th>
        
       
      </tr>
     </thead>
     <tbody>
     
     <% for(n in list){ %>
       <% gid = list[n].gid %>
       <% otid = list[n].otid %>
       <% org = list[n].org %>
       <% taxidfullname = 'HMT-'+("000" + list[n]['otid']).slice(-3); %>
       
       
       <tr>
       <td><a href='genome_description?gid=<%= gid %>'><%= gid %></td>
       <td><a href='peptide_table3?gid=<%= gid %>'>open</td>
       <td class='center'><a href='/taxa/tax_description?gid=<%= gid %>&otid=<%= otid %>'><%= taxidfullname %></a></td>
       <td title='<%= org %>'><a href='genome_description?gid=<%= gid %>'><%= org %></a></td>
       <td class='center'><%= list[n].studies %></td>
       <td class='center'><%= list[n].prot_count %></td>
       <td class='center'><%= list[n].pep_count %></td>
       </tr>
     <% } %>
     </tbody>
     </table>
     
</div>  <!-- end: table-box -->
   
    </div> <!-- end: page-content -->
    <div id='footer'>
         <%- include('../../partials/footer'); %>
    </div>
       
   
  </div> <!-- end wrapper -->
</body>

</html>
