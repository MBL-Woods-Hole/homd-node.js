#peptide-table {
  padding:5px;
 /*  width:1200px; */
  table-layout:fixed;
  width:100%;
}
#peptide-table th{
  color:white;
  background: var(--table-header-bg);
  padding:5px;
  font-size:13px;
  text-align: center;
  
}
#peptide-table td{
  padding:3px 2px;
  font-size:small;
  color: #303030;
  overflow: hidden;
  /* text-overflow: ellipsis; */
  white-space: nowrap;
}
#peptide-box{
   height:700px;
   overflow:auto;
   padding:10px 10px 20px 10px;
   border:1px solid gray;
   margin-top:5px;
}
#peptide-table .badge{
  
  font-size:0.8em;
  
}

#peptide-table tr:nth-child(even) { 
    background-color: #bccd9c; 
 } 
 #peptide-table tr:hover { 
    background-color: #dce7f5; 
 } 
.col1{
   width: 130px;
}
.col2{
   width: 100px;
}
