<style>
body {
            -webkit-transition: background-color 1s;
            transition: background-color 1s;
}
html, body { min-height: 100%; }
.result-table.sortable tbody {
    counter-reset: sortabletablescope;
}
.result-table.sortable thead tr::before {
    content: "row#";
    display: table-cell;
    width:30px;
    /* padding-left:1px; */
    vertical-align: middle;
    
    padding:5px;
    font-size:13px;
    text-align: center;
}
.result-table.sortable tbody tr::before {
    content: counter(sortabletablescope);
    counter-increment: sortabletablescope;
    display: table-cell;
    text-align:right;
    font-size:small;
}
.search-box{
   height:250px;
   width:100%;
   overflow:auto;
   margin:0px 0px;
   padding:0px 10px;
   background:lightgreen;
   border:1px solid black;
}
.search-box-anno{
   height:600px;
   width:100%;
   overflow:auto;
   margin:0px 0px;
   padding:10px 10px;
   background:lightgreen;
   border:1px solid black;
   
}
.outlier{
    padding:20px;
    background:brown;
    color:ivory;
}
.loader-gif{
  height:20px;
  width:90px;
}
#srch_txt{
   color:purple;
}
table{
   /* font-size:small; */
   border-collapse:collapse;
   margin:5px 0;
   width:90%;
}
table th{
   border:1px solid black;
   padding:3px 4px;
}
table td{
   border:1px solid black;
   padding:1px 4px;
}
.search_link{
   color:blue;
}
.search_link:hover{
   color:maroon;
   cursor:pointer;
}
.search-text-div{
    padding:8px;
    font-size:18px;
    
}
</style>
<%- include('../partials/header_html'); %>
<% var otids = JSON.parse(otid_list) %>
<% var gids = JSON.parse(gid_list) %>
<% var lineageids = JSON.parse(taxon_otid_obj) %>
<% anno_list = JSON.parse(annotationList)  %>
<% var search_type  = JSON.parse(form_type) %>  <!-- array of taxonomy, genomes or annotation -->

<body>
   <!-- <div id="loader" class="center-loader" style='z-index:1'></div> -->
    <div id='wrapper'>
    <%- include('../partials/header_img'); %>
    <%- include('../partials/navbar'); %>
    <div class='page-content' > 
       <div class='title'><%= search_type %> Search Result  </div>
<!-- 'HMT-'+("000" + otid).slice(-3);  -->
     <span style='float:right;'><a href='advanced_site_search'>Search Again</a></span> 
     <center>
       <div class='search-text-div'>
         Search String: <span id='srch_txt'>"<%= search_text %>"</span> <small>(case insensitive)</small>
       </div>
     </center>
     
<% if(search_type.indexOf("taxonomy") != -1){ %>
        <br>Hits from Bacterial Taxon Names: <%= Object.keys(lineageids).length %> <span class='float-right small'></span>
        <% if( Object.keys(lineageids).length > 0 ){ %>
        <div class='search-box'>
        <% n = 0 %>
        <center><table class='result-table sortable'>
        <tr><th nowrap>HMT-ID</th><th>Species (click to sort)</th></tr>
        <% for(otid in lineageids){ %>
           <tr>
           <% n += 1 %>
           <% taxidfullname = 'HMT-'+("000" + otid).slice(-3); %>
           
           <td nowrap><a href='/taxa/tax_description?otid=<%= otid %>'><%= taxidfullname %></a></td> 
           <td><a href='/taxa/tax_description?otid=<%= otid %>'><%= lineageids[otid] %></a></td>
           </tr>
        <% } %>
        </table>
        </center>
        </div>
        <% } %>
        <hr> 
    
    
        Hits from Oral Taxon-ID Metadata: <%= otids.length %> <span class='float-right small'></span> 
        <% if( otids.length > 0 ){ %>
        <div class='search-box'>
        <center><table class='sortable'>
        <tr><th nowrap>HMT-ID</th><th>Species (click to sort)</th></tr>
        <% for(n in otids){ %>
         <% otid = otids[n].otid %>
         <% taxidfullname = 'HMT-'+("000" + otid).slice(-3); %>
         <tr>
         
         <td nowrap><a href='/taxa/tax_description?otid=<%= otid %>'><%= taxidfullname %></a></td>
         <td><a href='/taxa/tax_description?otid=<%= otid %>'><%- otids[n].species %></a></td>
         </tr>
        <% } %>
        </table>
        </center>
        </div>
        <% } %>
        <hr> 
<% } %>
  
    
<% if(search_type.indexOf("genomes") != -1){ %> 
    Hits from Genome Metadata: <%= gids.length %> <span class='float-right small'></span>
    <% if( gids.length > 0 ){ %>
    <div class='search-box'>
    <center><table class='result-table sortable'>
    <tr><th nowrap>HMT-ID</th><th nowrap>Genome-ID</th><th>Species (click to sort)</th></tr>
    <% for(n in gids){ %>
       <% gid  = gids[n].gid %>
       <% otid = gids[n].otid %>
       <% taxidfullname = 'HMT-'+("000" + otid).slice(-3); %>
       <tr>
       <td nowrap><a href='/taxa/tax_description?otid=<%= otid %>'><%= taxidfullname %></a></td>
       <td><a href='/genome/genome_description?gid=<%= gid %>'><%= gid %></a></td>
       <td><a href='/genome/genome_description?gid=<%= gid %>'><%- gids[n].species %></a></td>
       </tr>
    <% } %>
    </table>
    </center>
    </div>
    <% } %>
    <hr> 
<% } %>

<% if(search_type.indexOf("annotations") != -1){ %> 
    
    
    Annotations <small>(Searches only Genome-IDs, Accessions(Molecule), Protein-IDs, Gene and Gene Product (~20M records)):<span class='small'></span></small>
     <% if(anno_list.hasOwnProperty("too_long")){  %>
        <br>Hits: ><%= max %>
    <% }else{ %>
        <br>Hits: <%= anno_list.length %>
    <% } %>
    <br>
     
         <% if(anno_list.hasOwnProperty("too_long")){  %>
               
               <center><div class='outlier'>Too Many Hits (><%= max %>). Try to refine your search. (Selected Annotation: <%= anno.toUpperCase() %>)</div></center>
         <% }else if(anno_list.length == 0){ %>
               <center><div class='outlier'>Zero Hits (Selected Annotation: <%= anno.toUpperCase() %>)</div></center>
         <% }else{ %>
             <div class='search-box-anno'>
             <span class='search-text-div'>Selected Annotation: <%= anno.toUpperCase() %></span>
             <% if(anno_list.length != 0){ %>
               <table class='result-table sortable'>
               <tr><th>Genome-ID</th><th>Accession</th><th>Protein-ID</th><th>Gene</th><th>Gene Product</th>
                 <!-- <th>Length AA</th><th>Length NA</th><th>Start</th><th>Stop</th> -->
                 </tr>
               <% for(x in anno_list){ %>
                 <% gid  = anno_list[x].genome_id %>
                 <tr>
                   <td><a href='/genome/genome_description?gid=<%= gid %>'><%= gid %></a></td>
                   
                   <td><a href='/genome/explorer?gid=<%= gid %>&anno=<%= anno %>'><%= anno_list[x].accession %></a></td>
                   <td><a href='/genome/explorer?gid=<%= gid %>&anno=<%= anno %>'><%= anno_list[x].protein_id %></a></td>
                   <td><%= anno_list[x].gene %></td>
                   <td><%= anno_list[x].product %></td>
<!-- 
                   <td><%= anno_list[x].length_aa %></td>
                   <td><%= anno_list[x].length_na %></td>
                   <td><%= anno_list[x].start %></td>
                   <td><%= anno_list[x].stop %></td>
 -->
                </tr>
                   
               <% } %>
               </table>
             
             <% } %>
             </div>
         <% } %>
     
<% } %>
    

    
    </div> <!-- end: page-content -->
    
    <div id='footer'>
         <%- include('../partials/footer'); %>
    </div>
  </div>     
</body>

</html>

