  width:100%;
  /* background:lightgrey; */
}
#refseq-table th
{
  color:white;
  background:  var(--table-header-bg);
  padding:5px;
  font-size:13px;
  
}
#refseq-table td
{
  padding:3px 2px 2px 5px;
  
  font-size:small;
  font-weight:bold;
  color: #303030;
  text-align:left;
  max-width: 200px;
 overflow: hidden;
 text-overflow: ellipsis;
 white-space: nowrap;
