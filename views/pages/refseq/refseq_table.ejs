<% rs = JSON.parse(refseq) %>
<%- include('../../partials/header_html'); %>

<body>
    <div id='wrapper'>
    <%- include('../../partials/header_img'); %>
    <%- include('../../partials/navbar2'); %>
    
    
    <div class='page-content' >
              
    <p class='h3 title'>16S Refseq Table</p>
    
    <div id='refseq-box' >
    <table id='refseq-table' class='sortable'>
    <tr><th>HMT-ID</th><th>RefSeq-ID</th><th>Species</th><th>Seq ID Count</th><th>Seq-IDs</th><th>(length) Sequence</th></tr>
    <% for(let n in rs){ %>
        <% taxidfullname = 'HMT-'+("000" + rs[n].otid).slice(-3); %>
        <tr>
            <td><a href='/taxa/tax_description?otid=<%= rs[n].otid %>'><%= taxidfullname %></a></td>
            <td><%= rs[n].refseq_id %></td>
            <td><%= rs[n].species %></td>
            <td><%= rs[n].seqid_count %></td>
            <td title='<%= rs[n].seqids %>'><%= rs[n].seqids %></td>
            <td>(<%= rs[n].length %>) <a href='#' class='td-button' onclick="get_refseqV16('<%= taxidfullname %>','<%= rs[n].refseq_id %>','<%= rs[n].species %>')">
                Show Sequence
            </td>
        </tr>
    <% } %>
    </table>
    </div>
  
    </div> <!-- end: page-content -->
    
    <div id='footer'>
         <%- include('../../partials/footer'); %>
    </div>
       
</body>

