<link rel="stylesheet" type="text/css" href="/css/taxa_pages.css" >
<%- include('../../partials/header_html'); %>

<% list = JSON.parse(data) %>
<% statusfltrX = statusfltr %>


<body>
  	<div id='wrapper'>
    <%- include('../../partials/header_img'); %>
    <%- include('../../partials/navbar'); %>
    
    
    <div class='page-content' >
    
  
	
		 <div class='title'><%= pgtitle %></div>
		 
		 <div id='download_browser_text_excel'><b>Download this Taxon Data</b>: 
		   <a href='dld_table/browser/<%= letter %>/<%= page %>/<%= sitefltr %>/<%= statusfltr %>' >[Browser]</a>
		   <a href='dld_table/text/<%= letter %>/<%= page %>/<%= sitefltr %>/<%= statusfltr %>' >[Text]</a>
		   <a href='dld_table/excel/<%= letter %>/<%= page %>/<%= sitefltr %>/<%= statusfltr %>' >[Excel]</a>
		 </div>		 
			 
	<%- include('../../partials/tax_table_filter_pt1.ejs') %>
<small>(HMT = <u>H</u>uman <u>M</u>icrobial <u>T</u>axon)</small>
<div id='tax-box' >

	<%- include('../../partials/tax_table_filter_pt2.ejs') %> 
	 
		 
		 <table id='tax-table' class='table table-hover table-condensed sortable' style='background: lightgrey;'>
		 <thead>
		  <tr>
		    <th scope="col" nowrap>Taxon-ID</th>
		    <th scope="col">Genus</th>
		    <th scope="col">Species</th>
		    <th scope="col">Status</th>
		    <th scope="col" nowrap>Body Site</th>
		    <th scope="col">Flag</th>
		    <th scope="col" class="sorttable_nosort" nowrap>Taxon Link</th>
		    <th scope="col" class="sorttable_nosort" nowrap>Genome Link</th>
		    <th scope="col" nowrap>Genome Size</th>
		  </tr>
		 </thead>
		 <tbody>
		 <% for(n in list){ %>
		   <tr>
		   <% otid= list[n].otid %>
		   <% taxidfullname = 'HMT-'+("000" + otid).slice(-3); %>
		   <td nowrap><%= taxidfullname  %></td>
		   <td nowrap><i><b><%= list[n].genus  %></b></i></td>
		   <td nowrap><i><b><%= list[n].species  %></b></i></td>
		   <td><%= list[n].status  %></td>
		   <td><%= list[n].sites  %></td>
		   <td><%= list[n].warning  %></td>
		   <td style='text-align:center' nowrap><a href="tax_description?otid=<%= otid %>" class="pill pill-orange" >Taxon Description</a></td>
		   <td style='text-align:center' nowrap>
		   <% num_genomes = list[n].genomes.length %>
		   <% if(num_genomes === 0){ %>
		     
		   <% }else if(num_genomes === 1){ %> 
		    <a href="/genome/genome_table?otid=<%= otid %>" class="pill pill-green" >1 Genome</a>
		   <% }else{ %>
		     
		     <a href="/genome/genome_table?otid=<%= otid %>" class="pill pill-green" ><%= num_genomes %> Genomes</a>
		     
		   <% } %>
		   </td>
		   <td nowrap><%= list[n].gsize  %></td>
		   </tr>
		 <% } %>
		 </tbody>
		 </table>
		 
</div>  <!-- end: tax-box -->
	 
    </div> <!-- end: page-content -->
    <div id='footer'>
         <%- include('../../partials/footer'); %>
    </div>
       
   
  </div> <!-- end wrapper -->
</body>

</html>
<script type="text/javascript" src="/js/jquery-2.1.1.min.js"></script> 
<script type="text/javascript" src="/js/taxonomy.js"></script>
<!-- <script type="text/javascript" src="/js/bootstrap.js"></script> -->
<script type="text/javascript" src="/js/sorttable.js"></script> <!-- https://www.kryogenix.org/code/browser/sorttable -->
<script type="text/javascript" src="/js/menu.js"></script>
<script>
  mainmenu()
  $(document).ready(function(){                    
    
    var letter = '<%- letter %>'
	var statusfltr= JSON.parse('<%- statusfltr %>')
	var sitefltr= JSON.parse('<%- sitefltr %>')
    // lets set check here
    // uncheck all
    var els = document.getElementsByClassName('filter_ckbx')
    var all_on = statusfltr.concat(sitefltr)
    for (n in els){
		if(all_on.indexOf(els[n].name) != -1){
		  els[n].checked = true
		}
	} 
	if(letter){
		document.getElementById(letter).style.color = 'red'
		document.getElementById(letter).style.fontSize = 'medium'
	}else{
		document.getElementById('all').style.color = 'red'
	}
});

</script>



