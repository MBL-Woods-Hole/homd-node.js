<style>

/* PHONEs get No legend */
@media only screen and (min-width : 100px) {
  #top-legend{
    display:none;
  }
  #side-legend{
     display:none;
  }
}
/* SMALL ----------- */
@media only screen and (min-width : 1100px) {
  #top-legend{
    display:block;
    /* visibility:visible; */
    position:relative;
    /* left:200px; */
    margin-left:10px;
    
  }
  #side-legend{
     display:none;
