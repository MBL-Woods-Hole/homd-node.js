  }
  #small-legend-table td{
    border:1px solid brown;
    font-size:12px;
    text-align:left;
    background:ivory;
  }
  .menu-title{
   
   font-size:9px;
   text-align:center;
   background:ivory;
   border:1px solid brown;
   width:100%;

  }
  #links-content{
  padding:1px;
  border:1px solid brown;
  width:100%
  }

  #legend-links{
  position:fixed;
  
  }
  #legend-content{
    font-size:9px;
    padding:1px;
    border:1px solid brown;
    width:100%;
  }
  .legend_item{
  padding:1px 2px;
  font-size:11px;
  }
  #legend-table{
    border:1px solid brown;
  }
  #legend-table td{
   font-size: 10px;
   text-align: left;
   padding-left:2px;
  }

}

/* Large screens ----------- */
@media only screen and (min-width : 1624px) {
  /* Styles */
  #top-legend{
    display:none;
  }
  #side-legend{
     display:block;
  }
  
  .left {
  width: 20%;
  font-size:12px;
  height: 200px; /* only to hold column open */
  }
  .middle {
    padding-top:10px;
  
  }
  .right {
  
  
  }
  .legend{
  
  }
  .menu-title{
   
   font-size:15px;
