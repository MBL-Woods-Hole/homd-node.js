<% images = JSON.parse(image_array)  %>
<%- include('../../partials/header_html'); %>


<body>
  <div id='wrapper'>
    <%- include('../../partials/header_img'); %>
    <%- include('../../partials/navbar2'); %>
    <div class='page-content' >   
    <p class='title h3'>
        <% if(!rank) { %>
           <span>Life:</span> <span class='orange_text'>Cellular Organisms</span>
        <% }else if (rank === 'klass'){ %>
           <span>Class:</span> <span class='orange_text'><%= tax_name %></span>
        <% }else if(rank=='species') { %>
           
           <span>Species:</span> <span class='orange_text'><em><%= tax_name %></em></span>
        
        <% }else{ %>
           <% headerline = rank.charAt(0).toUpperCase() + rank.slice(1) + ': '%>
           <span><%= headerline %></span> <span class='orange_text'><%= tax_name %></span>
        <% } %>
    </p>
    
    
    <% if(lineage){ %>
    <div id='lineage'>
      <span>Lineage:</span> <span id='lineage2'><%- lineage %></span>
      </div>
    <% }else{ %>
    <div id='lineage' style='padding:10px;margin-top:20px;'>Select a domain below to descend the taxonomic lineage of the oral microbiome.</div>
    <% } %>
    
<% if(text_file && images.length > 0){ %>
   
   <div id='imagesNtext'>
   <div><%- include("../../partials/static/"+text_file); %></div>
   <br>
   
    <table id='image-table'>
        <tr><td valign='top'><img title='<%= images[0].title %>' id='img' src='/images/life-images/<%= images[0].name %>' width='250'  alt='<%= tax_name %> Image'  \><br>
        <small><%- images[0].text %></small>
        </td></tr>
    </table>
   </div>
   
   <style>#life-table{width:58%;}</style>
   
<% }else if(text_file){ %>
    <div id='text'><%- include('../../partials/static/'+text_file); %></div>
    <style>#life-table{width:58%;}</style>
<% }else if(text_format){ %>
   <div id='text'><%- text_format %></div>
   <style>#life-table{width:58%;}</style>
<% }else if(images.length > 0){ %> 
   
    <div id='images'>
    
    <% if(images.length === 1 ) { %>
      <div>
        <table id='image-table'>
        <tr><td valign='top'><img title='<%= images[0].title %>' id='img' src='/images/life-images/<%= images[0].name %>' width='250'  alt='<%= tax_name %> Image'  \><br>
        <small><%- images[0].text %></small>
        </td></tr>
        </table>
      </div>
    <% }else{ %>
      <table id='image-table'>
        <tr>
        <% for(n in images){ %>
          <% if(n==0 || n===2){ %>
          <tr><td>
          <% }else{ %>
          <td>
          <% } %>
          <div>
          <img title='<%= images[n].title %>' id='img' src='/images/life-images/<%= images[n].name %>' width='250'  alt=''  \><br>
          <small><%- images[n].text %></small>
          </div>
          <% if(n==0 || n===2){ %>
          </td>
          <% }else{ %>
          </td></tr>
          <% } %>
        <% } %>
      </table>
    <% } %>
    </div>
    <style>#life-table{width:58%;}</style>
<% }else{ %> 
    <style>#life-table{width:80%;}</style>
<% } %> 


 

    
    <div id='hierarchy_table_div'>
    <table id='life-table'> 
    <thead>
     <tr><th></th><th><i>e</i>HOMD Taxonomy <small>(Taxon count)</small></th><tr>
    </thead>
    <tbody>
     <tr>
     <% if(!rank){ %>
       <td class='life-taxa-name selected'>Life</td><td class='life-taxa'><a href='life'>Cellular Organisms</a></td>
     <% }else{ %>
       <td class='life-taxa-name'>Life</td><td class='life-taxa'><a href='life'>Cellular Organisms</a></td>
     <% }%>
     </tr>
     <%- html %>
    
    </tbody>
    </table>
    </div>
</div> <!-- end: page-content -->

