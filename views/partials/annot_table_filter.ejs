<style>
.letter{
  cursor:pointer;
  color:blue;
}
.noletter{
  cursor:pointer;
  color:blue;
}
.alpha-list{
   font-family: monospace;
}
#filter_form_div{
   border:1px solid black;
   padding:12px;
   width:100%;
}
#form_btn{
  width:100%;
  color:grey;
}
#outer_table td{
   padding:0 30px;
   /* border:1px solid red; */
   
}
#filter_table{
   
   border-collapse:colapse;
}
#filter_table td{
   border-top:1px solid brown;
   padding:8px 5px;
}
#reset_div a{
   font-size: 14px;
   white-space: nowrap;
}
#sort_rev{
   
   border: 1px solid brown;
   padding:2px 1px 1px 1px;
   margin:1px;
}
.button{
   cursor:pointer;
   color:blue;
   background:lightgrey;
}
